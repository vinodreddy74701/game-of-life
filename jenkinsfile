pipeline {
    agent { label 'JDK_8' }
    options {
        retry(3)
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers {
        pollSCM('* * * * *')
    }
    tools {
        jdk 'JDK_8'
    }
    parameters {
        string(name: 'GOAL', choice: ['package', 'clean package', 'install', 'clean install'], description: 'This is maven goal')
    }
    stages {
        stage('code') {
            steps {
                git url: 'https://github.com/vinodreddy74701/game-of-life.git',
                    branch: 'devops'
            }
        }
        stage('package') {
            steps {
                sh script: 'mvn clean package'
            }

        }
        stage('report') {
            steps {
                junit testResults: '**/surefire-reports/TEST-*.xml'
                archiveArtifacts artifacts: '**/target/gameoflife.war'
            }

        }
    }
    post {
        success {
            mail subject: "${JOB_NAME}: has completed with success",
                 body: "your project is effective \n Build Url ${BUILD_URL}", 
                 to: 'all@qt.com'
        }
        failure {
            mail subject: "${JOB_NAME}:: has completed with failed",
                 body: "your project is defective \n Build Url ${BUILD_URL}",
                 to : 'all@qt.com'
        }
    }
}